using System.Collections;
using System.Collections.Generic;
using UnityEngine;
using System;

public static class LevelManager : MonoBehaviour
{
    public static Dictionary<Int32, LevelInfo> levelInfos;

    public static void SetInfoByID(int id) //note that id means level number, not index
    {
        SetInfo(Dictionary[id]);
    }

    public static string GetTypeById(id)
    {
        switch(Dictionary[id].GetType())
        {
            case LevelInfoBC:
                return
                break;
            default:
                return new LevelInfo().GetType();
        }
    }

    //кучка перегрузок для разных мини-игр
    public static void SetInfo(LevelInfoBC info) //blaster challenge
    {
        mover.availableQuestions = info.availableQuestions;
        mover.speed = info.speed;
    }
}